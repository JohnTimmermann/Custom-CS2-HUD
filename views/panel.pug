.row(style="margin-top: 2rem;")
	.col.s12(style="text-align:center;")
		.input-field.col.s6.offset-s3
			select#botype
				option(value='', disabled='', selected='') Choose your option
				option(value=null) None
				option(value='bo1') Best Of 1
				option(value='bo3') Best Of 3
				option(value='bo5') Best Of 5
			label Choose type (in BO1 bar doesnt show)
		//- .col.s12.m6
		.row
			.col.s5.offset-s1
				.card.small.blue-grey.darken-4
					.card-content
						.card-title 
							h4 Team 1
						.input-field.col.s12
							select#team_1_score
								option(value='0', selected) 0
								option(value='1') 1
								option(value='2') 2
								option(value='3') 3
							label Map wins for team 1
						.input-field.col.s12
							select#team_1.icons
								option(value=null) NONE
								option(value='auto', selected) Try to match team automatically
							label Set team 1
			.col.s5
				.card.small.blue-grey.darken-4
					.card-content
						.card-title 
							h4 Team 1
						.input-field.col.s12
							select#team_2_score
								option(value='0', selected) 0
								option(value='1') 1
								option(value='2') 2
								option(value='3') 3
							label Map wins for team 2
						.input-field.col.s12
							select#team_2.icons
								option(value=null) NONE
								option(value='auto', selected) Try to match team automatically
							label Set team 2
		//- Hiding players by steamID64
		.row
			.col.s4.offset-s4
				.card.small.blue-grey.darken-4
					.card-content
						#ignoredSteamIDs
						.input-field.col.s12.m12
							input#iSIDinput.validate(placeholder='Enter in SteamID64', type='text')
							label SteamID64 to Hide
							a.waves-effect.waves-light.btn#iSIDButton Hide Player
							blockquote If you refresh your hud, you will need to refresh the panel page, and resubmit the SteamIDs
						.chip-container
						
						

		.input-field.col.s12
			.row
				a.waves-effect.waves-light.btn#set Set
				a.waves-effect.waves-light.btn#swap Swap
			.row
				a.waves-effect.waves-light.btn#ref Force refresh HUD



